@model HomeAdmViewModel
@using BlogSollisNegocio

<div class="grid-control grid-posts">
    <table class="table table-condensed table-hover table-bordered">
        <thead>
            <tr>
                <th class="coluna-pencil">&nbsp;</th>
                <th class="coluna-titulo">Título</th>
                <th class="coluna-descricao">Descrição</th>
                <th class="coluna-rascunho">Rascunho</th>
                <th class="coluna-remover">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Post item in Model.PostsColSource)
            {
                <tr data-id="@item.IdPost">
                    <td class="coluna-pencil" data-url="/Adm/Home/Editar/@item.IdPost">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </td>
                    <td class="grid-selecionar coluna-titulo">@item.Titulo</td>
                    <td class="grid-selecionar coluna-descricao">@Utilidades.limitar(item.Descricao, 200)@(item.Descricao.Length > 200 ? "..." : string.Empty)</td>
                    <td class="grid-selecionar coluna-rascunho">@(item.Rascunho.GetValueOrDefault() ? "Sim" : "Não")</td>
                    <td class="grid-control-icon-cell grid-selecionar coluna-remover" data-url="/Adm/Home/Remover/@item.IdPost">
                        <span title="Remover" class="grid-remover remove" data-title="Atenção" data-message="Deseja realmente remover este registro?">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>